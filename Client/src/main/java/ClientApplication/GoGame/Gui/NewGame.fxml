            </VBox>
         </center>
         <right>
            <VBox prefHeight="146.0" prefWidth="92.0" BorderPane.alignment="CENTER">
               <children>
                  <RadioButton mnemonicParsing="false" text="9x9">
                     <toggleGroup>
                        <ToggleGroup fx:id="size" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="13x13" toggleGroup="$size" />
                  <RadioButton mnemonicParsing="false" text="19x19" toggleGroup="$size" />
               </children>
            </VBox>
         </right>
      </BorderPane>
      <Button fx:id="startButton" layoutX="234.0" layoutY="108.0" mnemonicParsing="false" onAction="#SendGameSettings" text="START" />
   </children>
</AnchorPane>
